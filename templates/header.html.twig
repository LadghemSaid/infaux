<header>
    <nav class="d-flex justify-content-between align-items-center nav-menu">
        <a class="logo" href="{{ path("index") }}"><img src="{{ asset("img/logo_infaux.png") }}" alt="Agence Pop Web logo"/></a>
            <input type="checkbox" id="nav" class="hidden"/>
            <label for="nav" class="nav-open">
                <i></i>
                <i></i>
                <i></i>
            </label>
            <div class="nav-container">
                <ul>
                    <li>
                        <a class="nav-link {% if current_menu is defined and current_menu == 'posts' %}active{% endif %}"
                           href="{{ path('index') }}">Questions
                            <span class="sr-only">(current)</span>
                        </a></li>
                    <li>
                        <a class="nav-link {% if current_menu is defined and current_menu == 'search' %}active{% endif %}"
