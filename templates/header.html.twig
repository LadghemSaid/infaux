<header>
    <div id="marge-du-header">
        <a href="{{ path("index") }}"><img src="{{ asset("img/logo.svg") }}" alt="Agence Pop Web logo"/></a>
        <div id="menu-du-header">

            <a class="nav-link {% if current_menu is defined and current_menu == 'posts' %}active{% endif %}"
               href="{{ path('index') }}">Questions <span class="sr-only">(current)</span></a>
            {% if app.user %}



                <a class="nav-link {% if current_menu is defined and current_menu == 'account' %}active{% endif %}"
                   href="{{ path('account.show') }}">Mon profil <span class="sr-only">(current)</span></a>
                <a class=" {% if current_menu is defined and current_menu == 'logout' %}active{% endif %}"
                   href="{{ path('app_logout') }}">Se d√©connecter</a>
                {% if is_granted('ROLE_ADMIN') %}


                    <a class="nav-link " href="/admin">Admin</a>

                {% endif %}
            {% else %}


                <a class=" {% if current_menu is defined and current_menu == 'login' %}active{% endif %}"
                   href="{{ path('app_login') }}">Se connecter</a>
                <a class=" {% if current_menu is defined and current_menu == 'register' %}active{% endif %}"
                   href="{{ path('app_register') }}">S'inscrire</a>

            {% endif %}


        </div>
    </div>
</header>

