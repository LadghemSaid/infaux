{% block google %}
    <meta name="google" content="unavailable_after: [date ]">{% endblock %}

{% block style_custom %}

    <style>

    </style>
{% endblock %}
{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <div class="container">
        <div class="notif-blk">
            <h1><i class="icon-bell"></i>Notifications</h1>

            {% if notifsSeen is empty and notifsNotSeen is empty %}
                <p>Vous n'avez aucune notifications</p>
            {% endif %}

            {% for notif in notifsSeen %}
            {% if notif.byUser is not empty %}

            {% if notif.byPost is not null %}
            <a href="{{ path('post.show',{"id":notif.byPost.id}) }}">
                {% elseif notif.byComment is not null %}
                <a href="{{ path('post.show',{"id":notif.byComment.post.id}) }}">

                    {% endif %}
                    <div class="notif ">

                        {% if notif.byUser.image  is defined %}
                            <img src="{{ vich_uploader_asset(notif.byUser, 'imageFile') }}"/>
                        {% else %}
                            <img src="{{ ("https://api.adorable.io/avatars/285/anonyme" ~ random(50, 100) ~"@adorable.io.png") }}"/>
                        {% endif %}


                        <div>
                            <div data-createdAt="{{ notif.createdAt |date('U') }}" class="user p-date"></div>
                            <div class="opa nm">
                                <p>
                                    <span class="user">{{ notif.byUser  |capitalize }}</span> {{ notif.message }}
                                </p>

                            </div>
                        </div>
                    </div>
                </a>

                {% else %}

                {% if notif.byPost is not null %}
                <a href="{{ path('post.show',{"id":notif.byPost.id}) }}">
                    {% elseif notif.byComment is not null %}
                    <a href="{{ path('post.show',{"id":notif.byComment.post.id}) }}">

                        {% endif %}

                        <div class="notif">


                                <img src="{{ ("https://api.adorable.io/avatars/285/anonyme" ~ random(50, 100) ~"@adorable.io.png") }}"/>

                            <div>
                                <div data-createdAt="{{ notif.createdAt |date('U') }}" class="user p-date"></div>
                                <div class="opa nm">
                                    <p>

                                        <span class="user">Anonyme</span> {{ notif.message }}
                                    </p>

                                </div>
                            </div>
                        </div>
                    </a>
                    {% endif %}
                    {% endfor %}
                    {% for notif in notifsNotSeen %}
                    {% if notif.byUser is not empty %}

                    {% if notif.byPost is not null %}
                    <a href="{{ path('post.show',{"id":notif.byPost.id}) }}">
                        {% elseif notif.byComment is not null %}
                        <a href="{{ path('post.show',{"id":notif.byComment.post.id}) }}">

                            {% endif %}
                            <div class="notif  not-seen">
                                <img src="/uploads/images/users/{{ notif.byUser.image }}"/>
                                <div>
                                    <div data-createdAt="{{ notif.createdAt |date('U') }}" class="user p-date"></div>
                                    <div class="opa nm">
                                        <p>

                                            <span class="user">{{ notif.byUser |capitalize }}</span> {{ notif.message }}
                                        </p>

                                    </div>
                                </div>
                            </div>
                        </a>

                        {% else %}

                        {% if notif.byPost is not null %}
                        <a href="{{ path('post.show',{"id":notif.byPost.id}) }}">
                            {% elseif notif.byComment is not null %}
                            <a href="{{ path('post.show',{"id":notif.byComment.post.id}) }}">

                                {% endif %}

                                <div class="notif  not-seen">
                                    <img src="{{ asset('uploads/images/users/adorable.png') }}"/>
                                    <div>
                                        <div data-createdAt="{{ notif.createdAt |date('U') }}"
                                             class="user p-date"></div>
                                        <div class="opa nm">
                                            <p>

                                                <span class="user">Anonyme</span> {{ notif.message }}
                                            </p>

                                        </div>
                                    </div>
                                </div>
                            </a>
                            {% endif %}
                            {% endfor %}

        </div>

    </div>
{% endblock %}


  {% block javascripts %}
      <script>
          $(function () {
              moment.locale('fr');
              $(".p-date").map((x, i) => {
                  i.innerText = moment.unix(i.dataset.createdat).local().fromNow();
              });
          });
      </script>

  {% endblock %}
