{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container" style="margin-top: 70px">
        <div class="account">
            <div class="img_wrap">
                <div class="img"
                     style="background:url('{{ "/uploads/images/users/" ~ user.image ?? 'adorable.png' }}')">
                </div>
            </div>
            <p class="name">{{ user.username }}</p>
            <p class="createdAt">Depuis le {{ user.createdAt|date("m/d/Y", "Europe/Paris") }}</p>
            <p class="description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. </p>
            <div class="liens">
                <div>
                    <a href="{{ path('post.follower') }}"><span class="subscriberCount">{{ user.friendList | length }}</span> abonnés</a>
                </div>
                <div>
                    <a href="{{ path('post.follow') }}"><span class="subscribeCount">{{ user.friends | length }}</span> abonnements</a>
                </div>
            </div>
            {% if app.user %}
                {% if app.user ==  user %}
                    <div class="edit"><a href="{{ path('account.settings') }}">Editer mon compte</a></div>
                {% elseif user  in  app.user.friends %}

                    <div data-userId="{{ user.id }}"
                         onclick="handleAddUserFollow(event)"
                         data-action="{{ path('follow.add',{"id": user.id}) }}"
                         class="followUser">
                        <span class="followStatus">Suivi</span>
                    </div>

                {% else %}
                    <div data-userId="{{ user.id }}"
                         onclick="handleAddUserFollow(event)"
                         data-action="{{ path('follow.add',{"id": user.id}) }}"
                         class="followUser">
                        <span class="followStatus">Suivre</span>
                    </div>


                {% endif %}
            {% endif %}

        </div>

        {% if app.user ==  user %}
            <span>{{ app.user.posts|length }} posts</span>
            <div class="postContainer">
                {% set posts = app.user.posts %}
                {% for post in posts %}
                    {% set comments = post.comments | slice(-5,10) | formatComment('DESC') %}
                    {{ include('/posts/only-post.html.twig') }}
                {% endfor %}

            </div>
        {% endif %}


    </div>
{% endblock %}


