{% block body %}



    <div class="container">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}
        <div class="setting">
            <h1><i class="icon-heart"></i>Parametres</h1>
            <div class="card mon-compte">
                <h1>Compte</h1>
                <div class="group">
                    <p class="item">Avatar actuelle</p>
                    <div class="img"
                         style="background:url('/uploads/images/users/{{ user.image }}')">

                    </div>
                    {{ form_start(formAvatar) }}
                    {{ form_row(formAvatar.imageFile,{'attr':{'class': ''},'label': 'Changer d\'avatar'}) }}
                    {{ form_row(formAvatar.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formAvatar) }}


                </div>
                <div class="group">
                    <p class="item">Description</p>
                    <p>{{ user.description }}</p>
                    {{ form_start(formDescription) }}
                    {{ form_row(formDescription.description,{'attr':{'class': ''},'label': 'Description'}) }}
                    {{ form_row(formDescription.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formDescription) }}

                </div>
                <div class="group">
                    <p class="item">Pseudo</p>
                    <p>{{ user.username }}</p>
                </div>
                <div class="group">
                    <p class="item">Email du compte</p>
                    <p>{{ user.email }}</p>
                    {{ form_start(formEmail) }}
                    {{ form_row(formEmail.email,{'label': 'Email du compte'}) }}
                    {{ form_row(formEmail.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formEmail) }}

                </div>
                <div class="group">
                    <p class="item">Mot de passe</p>
                    <p>*************</p>
                    {{ form_start(formMdp) }}
                    {{ form_row(formMdp.actualPassword,{'attr':{'class': ''},'label': 'Mot de passe actuelle','value': '**********'}) }}
                    {{ form_row(formMdp.newPassword,{'attr':{'class': ''},'label': 'Nouveau Mot de passe','value': '*******'}) }}
                    {{ form_row(formMdp.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formMdp) }}

                </div>


                <a href="{{ path('account.delete') }}">Désactivé le compte</a>
                <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>


            <div class="card general">
                <h1>Général</h1>

                <div class="group">
                    <p class="item">Voir les posts</p>
                    <p>Les plus populaires</p>
                    {{ form_start(formDisplaySetting) }}
                    {{ form_row(formDisplaySetting.displaySetting,{'attr':{'class': ''},'label': 'Voir les posts'}) }}
                    {{ form_row(formDisplaySetting.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formDisplaySetting) }}
                </div>
                <div class="group">
                    <p class="item">Mode nuit</p>
                    <p>Désactivé</p>
                </div>
                <div class="group">
                    <p class="item">Qui peut voir mes posts</p>
                    <p>Tout le monde</p>
                    {{ form_start(formVisibility) }}
                    {{ form_row(formVisibility.visibility,{'attr':{'class': ''},'label': 'Qui peut voir mes posts'}) }}
                    {{ form_row(formVisibility.submit,{'attr':{'class': 'btn btn-primary mt-3 settings-modify-button'},'label': 'Modifier'}) }}
                    {{ form_end(formVisibility) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


