{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    Email : {{ user.email }}<br>
    Pseudo : {{ user.username }}<br>

    <img class="d-block w-100 lazyload p-img"
         src="{{ asset("img/low_res.jpg") }}"
         data-src="{{ app_path_users_images }}{{ user.image }}"
         alt="AlternateText"
         height="290px"/>

    <a href="/compte/{{ user.id }}/edit" class="btn btn-secondary">Editer</a>

</div>
{% endblock %}
