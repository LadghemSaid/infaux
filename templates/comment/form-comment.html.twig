
<div class="formComment container {% if expanded is defined %} formComment_onepost {% endif %} ">
    <div class="img"
            {% if app.user.image != "false" %}
         style="background:url('{{ vich_uploader_asset(app.user, 'imageFile')  | imagine_filter('user_mini_thumbnail') }}')">
        {% else %}
            style="background:url('{{ ("https://api.adorable.io/avatars/60/" ~ app.user.username) }}')">
        {% endif %}
    </div>
    <form onsubmit="handleAddComment(event, {% if expanded is defined %} true {% else %} false {% endif %})" name="comment"
          data-action="{{ path('comment.add',{'id':post.id}) }}"
          class="commentForm">
        <div class="form-group">
            {# <label class="sr-only required" for="comment_textComment">Commentaire</label> #}
            <input type="text" id="comment_textComment" name="comment[textComment]"
                   required="required"
                   class="commentForm__textarea form-control input-lg"
                   placeholder="Ton commentaire ..."
                   onclick="affiche_comment(event)"
                   onblur="afficheplus_comment(event)"
                   maxlength="500"
                   minlength="1"
            >
        </div>
        <div class="d-flex justify-content-start">
            <div class="form-group">
                <button type="submit" id="comment_submit-post-{{ post.id }}" name="comment[submit]"
                        class="btn" style="opacity: 0;">Envoyer
                </button>
            </div>
        </div>
    </form>
</div>
